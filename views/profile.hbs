<h1>Profil</h1>

<div class="row">
    <div class="col s6">
        {{#if user.avatarUrl}}
            <img class="avatar" src="{{user.avatarUrl}}" alt="avatar-{{user.name}}">
        {{else}}
            <p>Avatar yo'q</p>
        {{/if}}
    </div>
    <div class="col s6">
        <form action="/profile" method="POST" enctype="multipart/form-data">
            <p>Sizning emailingiz: <strong>{{user.email}}</strong></p>
            <div class="input-field">
                <input id="name" name="name" type="text" class="validate" required value="{{user.name}}">
                <label for="name">Sizning Ismingiz</label>
                <span class="helper-text" data-error="Ism bo'sh bo'lishi mumkin emas"></span>
            </div>
            <div class="file-field input-field">
                <div class="btn">
                    <span>Avatar</span>
                    <input type="file" name="avatar">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                </div>
            </div>
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <button type="submit" class="btn">O'zgartirish</button>
        </form>
    </div>
</div>